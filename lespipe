#!/bin/bash

if [ -d "$1" ]; then
    echo directory
    if [ $(uname) = "Darwin" ]; then
        CLICOLOR_FORCE=1 ls -G -l -h "$1"
    else
        ls -lh --color "$1"
    fi
    exit
fi

case $(echo "$1" | tr '[:upper:]' '[:lower:]') in
    *.tar.gz|*.tgz|*.tar.bz2|*.tar.tb2|*.tbz|*.tbz2)
        echo tar
        du -h "$1" | cut -f1 | sed 's/ *//'
        tar -tf "$1"
        ;;

    *.gz)
        echo gzip
        gzcat "$1"
        ;;

    *.bz2)
        echo bzip2
        bzcat "$1"
        ;;

    *.zip)
        echo zip
        unzip -l "$1"
        ;;

    *.a)
        echo ar
        ar -t -v "$1"
        ;;

esac

